{
  "name": "2sucres-api",
  "version": "1.1.0",
  "description": "Wrapper Node.JS autour de l'API 2sucres",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "test": "npx mocha --timeout 5000",
    "lint": "yarn lint:js",
